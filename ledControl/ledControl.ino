void setup() {
  Dote.shutdown(0, false);  // 절전모드 설정
  Dote.setIntensity(0, 2);  // 밝기 설정(1 ~ 15)
  Dote.clearDisplay(0); // 초기화
}

void loop() {
  int i, j;
  for (i = 0; i < 10; i++) {  // 숫자 0 ~ 9까지 출력
    for (j = 0; j < 8; j++) {
      Dote.setRow(0, j, digits[i][j]);
    }
    delay(1000);
  }
}
